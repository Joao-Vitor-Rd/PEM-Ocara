{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",          // Mude para um módulo Node/ESM para o Main Process
    "moduleResolution": "NodeNext", // Resolução de módulo para Node
    "lib": ["ES2020"],              // Remova "DOM" daqui, pois é código Node
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": [
    "src/**/*"
    // NOTA: 'src/renderers' deve ser tratado separadamente
  ],
  "exclude": ["node_modules", "dist", "src/renderers/**/*"] // EXCLUA OS RENDERERS
}